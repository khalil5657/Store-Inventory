    <%-include("navbar") %>
    <%-include("sidebar") %>
    <div class="content">
        <% if (game) {%>
            <form  method="post" action="/edit/<%=game.oldname%>" >
        <% }else{ %>
            <form  method="post" action="/test" >
        <% } %>
        <label for="">Name of The Game</label>

        <% if (game) {%>
        <input type="text" name="name" id="" value="<%=game.name%>" required><br>
        <% }else{ %>
            <input type="text" name="name" id="" value="" required><br>
        <% } %>

        <label for="">Which Devloper:</label>
        <label for="" class="devslabel">
            <% for (dev of devlopers) {%>
                <div>
                    <% if (game&&(game.devlopers.includes(dev.name))) {%>
                    <input type="checkbox" name="dev" value="<%=dev.name%>" checked>
                    <% }else{ %>
                        <input type="checkbox" name="dev" value="<%=dev.name%>" >
                    <% } %>
                    <label for="dev"><%=dev.name %></label>
                </div>
            <% } %>
        </label>
        <label for="">Which Gnere:</label>
        <label for="" class="genrelabel">
            <% for (let genre of genres) {%>
                <div>
                    <% if (game&&(game.genre.includes(genre.name))) {%>
                        <input type="checkbox" name="genre" value="<%=genre.name%>" checked>
                        <% }else{ %>
                            <input type="checkbox" name="genre" value="<%=genre.name%>" >
                        <% } %>
                    <label for="genre"><%=genre.name %></label>
                </div>
            <% } %>
        </label>
        <button type="submit">Add</button>
    
    </form>
</div>
</body>
